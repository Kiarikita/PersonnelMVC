@model PersonnelMVC.ViewModels.PersonnelDepartmentViewModel
@{
    ViewBag.Title = "Personel Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@Html.ValidationSummary()*@
<div id="message">

</div>
@using (Ajax.BeginForm("Save", "Personnels", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "message" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Name)
        @Html.TextBoxFor(m => m.Personnel.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Surname)
        @Html.TextBoxFor(m => m.Personnel.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.DepartmentId)
        @Html.DropDownListFor(m => m.Personnel.DepartmentId, new SelectList(Model.Departments, "ID", "Name"),
       "Lütfen Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.DepartmentId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Salary)
        @Html.TextBoxFor(m => m.Personnel.Salary, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personnel.Salary)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personnel.Birthday)
        @Html.TextBoxFor(m => m.Personnel.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.Personnel.Birthday)
    </div>
    <div class="radio">
        <label>
            @Html.RadioButtonFor(m => m.Personnel.Gender, true) Kadın
        </label>
        <label>
            @Html.RadioButtonFor(m => m.Personnel.Gender, false) Erkek
            @Html.ValidationMessageFor(m => m.Personnel.Gender)
        </label>
    </div>
    <br />
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Personnel.IsMarried) Evli ise işaretleyiniz.
            @Html.ValidationMessageFor(m => m.Personnel.IsMarried)
        </label>
    </div>
    @Html.HiddenFor(m => m.Personnel.ID)
    <button type="submit" class="btn btn-success mt-1">Kaydet</button>

}
@section scripts
{
    <script src="~/Scripts/jquery-1.8.3.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}


